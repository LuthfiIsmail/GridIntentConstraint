        android:id="@+id/btnD"
        android:layout_gravity="left|top"
        android:padding="20dp"
        android:text="D"
        android:background="#fff"/>

    <Button
        android:id="@+id/btnE"
        android:layout_gravity="left|top"
        android:padding="20dp"
        android:text="E"
        android:background="#fff"/>

    <Button
        android:id="@+id/btnF"
        android:layout_gravity="left|top"
        android:padding="20dp"
        android:text="F"
        android:background="#fff"/>

    <Button
        android:id="@+id/btnG"
        android:layout_gravity="left|top"
        android:padding="20dp"
        android:text="G"
        android:background="#fff"/>

    <Button
        android:id="@+id/btnH"
        android:layout_gravity="left|top"
        android:padding="20dp"
        android:text="H"
        android:background="#fff"/>

    <Button
        android:id="@+id/btnI"
        android:layout_gravity="left|top"
        android:padding="20dp"
        android:text="I"
        android:background="#fff"/>

    <Button
        android:id="@+id/btnJ"
        android:layout_gravity="left|top"
        android:padding="20dp"
        android:text="J"
        android:background="#fff"/>

    <Button
        android:id="@+id/btnK"
        android:layout_gravity="left|top"
        android:padding="20dp"
        android:text="K"
        android:background="#fff"/>

    <Button
        android:id="@+id/btnL"
        android:layout_gravity="left|top"
        android:padding="20dp"
        android:text="L"
        android:background="#fff"/>

</GridLayout>